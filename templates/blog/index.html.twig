{% extends 'base.html.twig' %}

{% block title %}Blog - {{parent()}}{% endblock %}

{% block additional_stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('../assets/blog/blog.css')}}">
{% endblock %}

{% block body %}
    <h1>Blog DIY</h1>

    <div class="navigation pag">
        {{ knp_pagination_render(articles) }}
    </div>

    <section class="articles">
        <div class="row">
            {% for article in articles %}
            <article class="col-md-6 col-xl-4">
                <div class="card-deck article">
                    <div class="card">
                        <img src="https://via.placeholder.com/350x250/" class="card-img-top article-img" alt="...">
                        <div class="card-body article-body">
                            <h2 class="card-title article-title">{{ article.titre }}</h2>
                            <p class="card-text article-text">{{ article.text | length > 150 ? article.text|slice(0, 150)  ~ '...' : article.text }}</p>
                            <a href="{{ path('blog_articles', {'id' : article.id}) }}" class="btn btn-primary article-link">Voir l'article</a>
                        </div>
                    </div>
                </div>
            </article>
            {% endfor %}
        </div>
    </section>

    <div class="navigation pag">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
