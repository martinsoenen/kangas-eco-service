{% extends 'base.html.twig' %}

{% block title %}Panier - {{parent()}}{% endblock %}

{% block body %}
    <div class="p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.nomProduit }}</td>
                        <td>{{ item.product.prixUnitaireHT * (1 + item.product.tauxTVA) }}€</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ (item.product.prixUnitaireHT * (1 + item.product.tauxTVA)) * item.quantity }}€</td>
                        <td>
                            <a href="{{ path('panier_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right"> Total :</td>
                <td>{{ total }}€</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
{% endblock %}
