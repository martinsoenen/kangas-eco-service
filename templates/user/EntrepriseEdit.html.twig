{% extends 'base.html.twig' %}

{% block title %}Profil -{{ parent() }}
{% endblock %}

{% block additional_stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('../assets/connexion/profil.css') }}">
{% endblock %}

{% block body %}
    <div class="profil">
        <div class="profil-container">
            <h1>Compte Entreprise</h1>
            <div class="pro profil-info">
                {{ form_start(form) }}
                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Numéro de SIRET</label>
                    <div class="col-md-8">{{ form_widget(form.siret) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Raison sociale</label>
                    <div class="col-md-8">{{ form_widget(form.raisonSociale) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Fonction du représentant</label>
                    <div class="col-md-8">{{ form_widget(form.fonctionRepresentant) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Nom du représentant</label>
                    <div class="col-md-8">{{ form_widget(form.nom) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Prénom du représentant</label>
                    <div class="col-md-8">{{ form_widget(form.prenom) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Téléphone</label>
                    <div class="col-md-8">{{ form_widget(form.telephone) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">E-mail</label>
                    <div class="col-md-8">{{ form_widget(form.email) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Mot de passe</label>
                    <div class="col-md-8">{{ form_widget(form.password) }}</div>
                </div>

                <div class="profil-info__item profil-info__button row">
                    {{ form_row(form._token) }}
                    {{ form_widget(form.save) }}
                </div>

                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>

{% endblock %}

