{% extends 'base.html.twig' %}

{% block title %}Profil -{{parent()}}
{% endblock %}

{% block additional_stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{asset('../assets/connexion/profil.css')}}">
{% endblock %}

{% block body %}
<div class="profil">
    <div class="profil-container">
        <h1>Compte Particulier</h1>
        <div class="user-info profil-info">
            <div class="perso">
                {{form_start(form)}}
                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Civilité</label>
                    <div class="col-md-8">{{ form_widget(form.civilite) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Nom</label>
                     <div class="col-md-8">{{ form_widget(form.nom ) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Prénom</label>
                     <div class="col-md-8">{{form_widget(form.prenom) }}</div>
                </div>

                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">Téléphone</label>
                     <div class="col-md-8">{{form_widget(form.telephone) }}</div>
                </div>
                
                <div class="profil-info__item row">
                    <label class="col-md-4 col-12">E-mail</label>
                     <div class="col-md-8">{{form_widget(form.email) }}</div>
                </div>

                <div class="profil-info__item row"> 
                    <label class="col-md-4 col-12">Mot de passe</label>
                     <div class="col-md-8">{{form_widget(form.password) }}</div>
                </div>
                
                <div class="profil-info__item profil-info__button row">
                    {{ form_row(form._token) }}
                    {{form_widget(form.save) }}
                </div>

                {{ form_end(form, {'render_rest': false}) }}
            </div>
            <hr>
            <div class="container-address-add">
                <i class="fa fa-address-book"></i>
                <p>Mes adresses</p>
                <a href="{{path('adresse_new')}}" class="btn btn-secondary modif-link">Ajouter une adresse</a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        {% for adresse in Adresse %}
                            <tr>
                                <td>{{adresse.nom}}</td>
                                <td>{{adresse.numeroRue ~ ' '~ adresse.typeRue ~ ' '
                        ~ adresse.nomRue ~ ' '~ adresse.CP ~ ' '~ adresse.Ville}}</td>
                                <td class="container-btn-modif">           
                                    <a class="modif-link btn btn-primary" href="/profil/adresse/{{adresse.id}}/edit">
                                    <i class="fa fa-pencil"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

