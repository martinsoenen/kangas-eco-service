{% block header %}
    <div id="header">
        <nav class="navbar navbar-expand-md container-md">
            <!-- Logo -->
            <a href="{{ path("home") }}" title="Retour à l'accueil">
                <img src="{{asset('../assets/img/Logo_Eco-Service_Line.png')}}" id="header-logo" border="0">
            </a>
            <!-- Barre de navigation -->
            <div class="navbar-nav navbar-nav-container">
                <a class="nav-link" id="shopping-cart-icon" href="{{ path('panier') }}" title="Accéder au Panier">
                    <i class="fa fa-shopping-cart fa-2x"></i>
                </a>

                <button class="nav-link navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <i class="fa fa-bars fa-2x"></i>
                </button>

            </div>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('magasin') }}">Magasin
                            <i id="help-icon" class="link-icon fa fa-shopping-bag fa-2x"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('entreprise_services') }}">Espace Pro.
                            <i id="help-icon" class="link-icon fa fa-handshake-o fa-2x"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('faq') }}">Aide
                            <i id="help-icon" class="link-icon fa fa-question-circle fa-2x"></i>
                        </a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <div class="profil-item ">
                        <li class="nav-item">
                            <a class="nav-link profil-button" href="{{ path('profil_client') }}">Profil
                                <i id="profile-icon" class="link-icon fa fa-user fa-2x"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link connexion-button" href="{{ path('security_logout') }}">Déconnexion
                                <i id="logout-icon" class="link-icon fa fa-sign-out fa-2x"></i>
                            </a>
                        </li>
                        <div>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link connexion-button" href="{{ path('security_login') }}">Connexion
                                <i id="login-icon" class="link-icon fa fa-sign-in fa-2x"></i>
                            </a>
                        </li>     
                    {% endif %}
                </ul>
            </div>

        </nav>
    </div>
{% endblock %}
