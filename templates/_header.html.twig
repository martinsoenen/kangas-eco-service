{% block header %}
    <div id="header">
        <nav class="navbar navbar-expand-md container-md">
            <!-- Logo -->
            <a href="{{ path("home") }}" title="Retour à l'accueil">
                <img src="{{asset('../assets/img/Logo_Eco-Service_Line.png')}}" id="header-logo" border="0">
            </a>

            <!-- TODO : BARRE DE RECHERCHE ICI -->

            <!-- Barre de navigation -->
            <div class="navbar-nav navbar-nav-container">
                <a class="nav-link" id="shopping-cart-icon" href="{{ path('panier') }}" title="Accéder au Panier">
                    <i class="fa fa-shopping-cart fa-2x"></i>
                </a>

                <button class="nav-link navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <i class="fa fa-bars fa-2x"></i>
                </button>

            </div>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">Déconnexion
                                <i id="login-icon" class="link-icon fa fa-sign-in fa-2x"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_login') }}">Connexion
                                <i id="login-icon" class="link-icon fa fa-sign-in fa-2x"></i>
                            </a>
                        </li>     
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('faq') }}">Aide
                            <i id="help-icon" class="link-icon fa fa-question-circle fa-2x"></i></a>
                    </li>
                </ul>
            </div>

        </nav>
    </div>
{% endblock %}
